---
import Card from "@/components/Card.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Image } from "astro:assets";

//Ivestments logo images
import BancoDeChile from "@/assets/investments/bancochile.png";
import Latam from "@/assets/investments/latam.jpg";
import Cencosud from "@/assets/investments/cencosud.png";
import Santander from "@/assets/investments/Santander.png";
import ConchaYToro from "@/assets/investments/concha.jpg";
import Copec from "@/assets/investments/Copec.png";
import Falabella from "@/assets/investments/falabella.png";
import Entel from "@/assets/investments/Entel.png";
import SQM from "@/assets/investments/SQM.jpg";
---

<BaseLayout title="SurInvest - Investments" description="">
	<Card
		title="Investments"
		subtitle={"Breeding Ground for Innovation & Leap-Frogging Development"}
		showSubtitle={true}>
		<p>
			Surinvest allocates equity and debt resources to first tier companies in
			Chile, which are at the forefront of economic integration with emerging
			and developed economies around the world, particularly financial
			intermediaries, extractive industries, utilities, transportation and
			retailing chains.
		</p>

		<div class="InversoresContainer">
			<a href="https://portales.bancochile.cl/" class="AssociateLink">
				<Image
					src={BancoDeChile}
					alt={"Logo Banco de Chile"}
					width={190}
					height={100}
				/>
			</a>
			<a href="https://portales.bancochile.cl/" class="AssociateLink">
				<Image
					src={Latam}
					alt={"Logo Banco de Chile"}
					width={190}
					height={100}
				/>
			</a>
			<a href="https://portales.bancochile.cl/" class="AssociateLink">
				<Image
					src={Cencosud}
					alt={"Logo Banco de Chile"}
					width={190}
					height={100}
				/>
			</a>
			<a href="https://portales.bancochile.cl/" class="AssociateLink">
				<Image
					src={Santander}
					alt={"Logo Banco de Chile"}
					width={190}
					height={100}
				/>
			</a>
			<a href="https://portales.bancochile.cl/" class="AssociateLink">
				<Image
					src={ConchaYToro}
					alt={"Logo Banco de Chile"}
					width={190}
					height={100}
				/>
			</a>
			<a href="https://portales.bancochile.cl/" class="AssociateLink">
				<Image
					src={Copec}
					alt={"Logo Banco de Chile"}
					width={190}
					height={100}
				/>
			</a>
			<a href="https://portales.bancochile.cl/" class="AssociateLink">
				<Image
					src={Falabella}
					alt={"Logo Banco de Chile"}
					width={190}
					height={100}
				/>
			</a>
			<a href="https://portales.bancochile.cl/" class="AssociateLink">
				<Image
					src={Entel}
					alt={"Logo Banco de Chile"}
					width={190}
					height={100}
				/>
			</a>
			<a href="https://portales.bancochile.cl/" class="AssociateLink">
				<Image src={SQM} alt={"Logo Banco de Chile"} width={190} height={100} />
			</a>
		</div>
	</Card>
</BaseLayout>

<style lang="scss">
	.InversoresContainer {
		display: grid;
		column-gap: 2em;
		row-gap: 2em;
		grid-auto-rows: auto;
		grid-template-columns: repeat(auto-fit, minmax(min(100%, 16em), 1fr));
		grid-auto-flow: dense;
		height: auto;

		a {
			border: solid 2px var(--border-strokes-color);
			border-radius: var(--border-radius-md);
			overflow: hidden;
			padding: 2rem;
			display: flex;
			align-items: center;
			justify-content: center;
		}
	}
</style>
